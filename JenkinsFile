pipeline {
    agent any

    tools {
        maven 'Maven-3.9.6'
        jdk 'JDK-11'
    }

    parameters {
        choice(
            name: 'BROWSER',
            choices: ['chrome', 'firefox', 'edge'],
            description: 'Select browser'
        )
        choice(
            name: 'TAGS',
            choices: [
                '@Smoke',
                '@Regression',
                '@Integration',
                '@E2E',
                '@Negative',
                '@Smoke or @Regression'
            ],
            description: 'Select Cucumber tags'
        )
    }

    environment {
        APP_URL = 'http://localhost/opencart/'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Harihareswaran/opencart-automation.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                bat """
                mvn test ^
                -Dcucumber.filter.tags="${params.TAGS}" ^
                -Dbrowser=${params.BROWSER} ^
                -Durl=${APP_URL}
                """
            }
        }

        stage('Cucumber Report') {
            steps {
                cucumber(
                    buildStatus: 'UNSTABLE',
                    reportTitle: 'OpenCart Automation Report',
                    jsonReportDirectory: 'reports',
                    fileIncludePattern: '**/*.json'
                )
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/**/*', allowEmptyArchive: true
        }

        success {
            echo '✅ Build SUCCESS'
        }

        failure {
            echo '❌ Build FAILED'
        }

        unstable {
            echo '⚠️ Build UNSTABLE'
        }
    }
}
